#include<stdio.h>
int main()
{
    int a,b,c;
    printf("enter the three numbers");
    scanf("%d %d %d",&a,&b,&c);
    if(a>=b && a>=c)
    {
        if(b>=c)
        {
            printf(" second largest number %d ",b);
            
        }
        else
        {
            printf(" second largest number %d ",c);
        }
        
    }
    else if(b>=a && b>=c)
    {
        if(a>=c)
        {
            printf(" second largest number %d ",a);
            
        }
        else
        {
            printf(" second largest number %d ",c);
        }
        
    }
    else if(c>=a && c>=b)
    {
        if(a>=b)
        {
            printf(" second largest number %d ",a);
            
        }
        else
        {
            printf(" second largest number %d ",b);
        }
        
    }
    return 0;
}


